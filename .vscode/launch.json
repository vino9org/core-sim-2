    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run server",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "justMyCode": false,
            "args": [
                "-k",
                "test_default_project",
            ]
        },
        {
            "name": "Run program",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--source",
                "a.csv"
            ]
        },
    ]
}
